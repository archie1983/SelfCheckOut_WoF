<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="@color/sdk_light_grey"
                android:startColor="@color/sdk_light_grey"
                android:angle="0" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/sdk_light_blue"
                android:startColor="@color/sdk_light_blue"
                android:angle="270" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/sdk_dark_gray" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:endColor="@color/sdk_blue"
                android:startColor="@color/sdk_blue"
                android:angle="270" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>