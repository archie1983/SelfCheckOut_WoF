<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.selfcheckout_wof">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!--uses-permission android:name="android.permission.READ_PHONE_STATE" /-->

    <application
        android:name=".custom_components.utils.SalesItemsCache"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AdminActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DataAdminActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SalesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_sales"
            android:theme="@style/SelfCheckoutFullscreen">
        </activity>
        <activity
            android:name=".btprinter_zj.DeviceListActivity"
            android:label="@string/title_activity_device_list"></activity>

        <!-- PPH Activities -->
        <activity
            android:name=".PPH.ui.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PPH.login.PPHLoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".PPH.ui.ReaderConnectionActivity"
            android:label="@string/title_activity_reader_connection"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".PPH.ui.ChargeActivity"
            android:label="@string/title_activity_charge"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".PPH.ui.RefundActivity"
            android:label="@string/title_activity_charge"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".PPH.ui.AuthCaptureActivity"
            android:label="AuthCaptureActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".PPH.ui.CaptureActivity"
            android:label="CaptureActivity"
            android:windowSoftInputMode="stateVisible"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".PPH.ui.PaymentOptionsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".PPH.ui.OfflinePayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity android:name=".PPH.ui.OfflinePaySuccessActivity"></activity>
        <activity
            android:name=".PPH.ui.VaultActivity"
            android:label="@string/title_activity_vault"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>


    </application>

</manifest>